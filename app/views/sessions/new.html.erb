<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Login</h1>
<p>Please login below.</p>

<%= form_tag(login_path) do %>
  <p>
    <%= radio_button_tag(:user_type, "Teacher") %>
    <%= label_tag(:teacher, "Teacher") %>
    <%= radio_button_tag(:user_type, "Student") %>
    <%= label_tag(:student, "Student") %>
    <%= radio_button_tag(:user_type, "Parent") %>
    <%= label_tag(:parent, "Parent") %>
  </p>
  <p><%= label_tag :email %>
  <%= email_field_tag :email %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>

  <%= submit_tag "Log in" %>
<% end %>
